{% extends 'twig/base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <p>
        <a href="{{ path('app_product_processor_create') }}">Create a product</a>
    </p>

    <table>
        <thead>
            <tr>
                <th>Identifier</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('app_product_provider', {productId: product.id}) }}">{{ product.id }}</a></td>
                <td>{{ product.name }}</td>
                <td>{{ product.priceAmount / 100 }} {{ product.priceCurrency }}</td>
                <td>{{ product.stock }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No products found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
